# App
# Production: https://kaulbyapp.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Clerk Authentication
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Neon Database
# Get this from https://console.neon.tech
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Stripe
# Get these from https://dashboard.stripe.com
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRO_PRICE_ID=price_xxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxx

# OpenRouter (LLM Gateway)
# Get this from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-xxxxx

# Langfuse (AI Observability)
# Get these from https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxx
LANGFUSE_HOST=https://cloud.langfuse.com

# Inngest (Background Jobs)
# Get these from https://app.inngest.com
INNGEST_EVENT_KEY=xxxxx
INNGEST_SIGNING_KEY=signkey-xxxxx

# Loops (Email)
# Get this from https://app.loops.so/settings/api
LOOPS_API_KEY=xxxxx

# Loops Transactional Email IDs (create these in Loops)
LOOPS_WELCOME_EMAIL_ID=welcome
LOOPS_ALERT_EMAIL_ID=alert
LOOPS_DIGEST_EMAIL_ID=digest
LOOPS_SUBSCRIPTION_EMAIL_ID=subscription
LOOPS_PAYMENT_FAILED_EMAIL_ID=payment_failed

# PostHog (Product Analytics)
# Get these from https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
